<h1 id="banner-title">Is Your Dog Healthy?</h1>
<div class="form-wrapper" data-controller="form">
  <%= form_with url: "/",
                method: :post,
                data: { form_target: "form",
                        action: "submit->form#showResults" } do |form| %>
    <%= form.label :height, "Height (cm):" %>
    <%= form.text_field :height, required: true, placeholder: "Fluffy's height is..." %>
    <%= form.label :weight, "Weight (kg):" %>
    <%= form.text_field :weight, required: true, placeholder: "Fluffy's weight is..." %>
    <%= form.label :breed, "Breed:" %>
    <datalist id="breed" data-form-target="suggestions">
    <!-- inject suggestions here -->
    </datalist>
    <%= form.search_field :breed, required: true, list: "breed", placeholder: "Fluffy's breed is...", data: { action: "input->form#getDogInfo" } %>
    <%= form.button :submit, data: { form_target: "submit"}, class: "btn btn-primary" %>
  <% end %>

  <div class="results" data-form-target="results">
    <!-- Javascript will inject the results here -->
  </div>
</div>
